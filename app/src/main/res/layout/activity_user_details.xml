<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailsActivity">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">

			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="230dp"
					android:orientation="vertical"
					android:gravity="center"
					android:background="@drawable/back">

					<TextView
						android:id="@+id/txt_output"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Stay Safe,Stay Blessed"
						android:textSize="22sp"
						android:textColor="@color/white"
						android:layout_gravity="center"
						android:textStyle="bold"
						/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginTop="215dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="135dp"
						android:orientation="horizontal"
						android:layout_marginBottom="10dp">

						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center"
							android:layout_marginRight="5dp"
							android:orientation="vertical"
							>
							<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								>
								<ImageView
									android:id="@+id/policeIV"
									android:layout_width="50dp"
									android:layout_height="50dp"
									android:src="@drawable/policeman"
									android:layout_centerInParent="true"
									/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="999"
									android:textColor="#F44336"
									android:textSize="18sp"
									android:layout_below="@+id/policeIV"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"

									/>
								<Button
									android:id="@+id/policeBT"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:background="@color/fui_transparent"/>

							</RelativeLayout>

						</androidx.cardview.widget.CardView>
						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center"
							android:orientation="vertical"
							android:layout_marginLeft="5dp"
							>
							<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								>
								<ImageView
									android:id="@+id/hospitalIV"
									android:layout_width="50dp"
									android:layout_height="50dp"
									android:src="@drawable/hospital"
									android:layout_centerInParent="true"
									/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="Hospital"
									android:textSize="16sp"
									android:layout_below="@+id/hospitalIV"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"

									/>
								<Button
									android:id="@+id/hospitalBT"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:background="@color/fui_transparent"/>

							</RelativeLayout>

						</androidx.cardview.widget.CardView>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="135dp"
						android:orientation="horizontal"
						android:layout_marginBottom="10dp">

						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center"
							android:layout_marginRight="5dp"
							android:orientation="vertical"
							>
							<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								>
								<ImageView
									android:id="@+id/schoolIV"
									android:layout_width="50dp"
									android:layout_height="50dp"
									android:src="@drawable/classroom"
									android:layout_centerInParent="true"
									/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="School"
									android:textSize="16sp"
									android:layout_below="@+id/schoolIV"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"

									/>
								<Button
									android:id="@+id/schoolBT"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:background="@color/fui_transparent"/>

							</RelativeLayout>

						</androidx.cardview.widget.CardView>
						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center"
							android:orientation="vertical"
							android:layout_marginLeft="5dp"
							>
							<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								>
								<ImageView
									android:id="@+id/restaurantIV"
									android:layout_width="50dp"
									android:layout_height="50dp"
									android:src="@drawable/coffee"
									android:layout_centerInParent="true"
									/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="Restaurant"
									android:textSize="16sp"
									android:layout_below="@+id/restaurantIV"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"

									/>
								<Button
									android:id="@+id/restaurantBT"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:background="@color/fui_transparent"/>

							</RelativeLayout>

						</androidx.cardview.widget.CardView>


					</LinearLayout>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="135dp"
						android:orientation="horizontal"
						android:layout_marginBottom="10dp">

						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center"
							android:layout_marginRight="5dp"
							android:orientation="vertical"
							>
							<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								>
								<ImageView
									android:id="@+id/ambulanceIV"
									android:layout_width="50dp"
									android:layout_height="50dp"
									android:src="@drawable/ambulance"
									android:layout_centerInParent="true"
									/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="Open Mic"
									android:textSize="16sp"
									android:layout_below="@+id/ambulanceIV"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"

									/>
								<Button
									android:id="@+id/ambulanceBT"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:background="@color/fui_transparent"
									android:onClick="btnSpeech"/>

							</RelativeLayout>

						</androidx.cardview.widget.CardView>
						<androidx.cardview.widget.CardView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:gravity="center"
							android:orientation="vertical"
							android:layout_marginLeft="5dp"
							>
							<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								>
								<ImageView
									android:id="@+id/houseIV"
									android:layout_width="50dp"
									android:layout_height="50dp"
									android:src="@drawable/house"
									android:layout_centerInParent="true"
									/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="Home"
									android:textSize="16sp"
									android:layout_below="@+id/houseIV"
									android:layout_centerHorizontal="true"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"

									/>
								<Button
									android:id="@+id/houseBT"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:background="@color/fui_transparent"/>

							</RelativeLayout>

						</androidx.cardview.widget.CardView>

					</LinearLayout>


				</LinearLayout>



			</RelativeLayout>

		</LinearLayout>

	</ScrollView>



</RelativeLayout>